<h1> Welcome back, <%= @user.username %>! </h1>

<br><br>

<h2> Pending Shipments </h2>
<% @shipments.each do |shipment| %>
    <% if shipment.user_id == session[:user_id] && shipment.status == "In-transit" %>
            <%= shipment.customer %><br><br>
    <% end %>
<% end %>

<br><br>

<h2> Delivered Shipments </h2>
<% @shipments.each do |shipment| %>
    <% if shipment.user_id == session[:user_id] && shipment.status == "Delivered" %>
            <%= shipment.customer %><br><br>
    <% end %>
<% end %>


<br><br>

<%= link_to "Create New Shipment", new_shipment_path %>
