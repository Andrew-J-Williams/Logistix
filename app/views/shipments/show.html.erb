<div class="user_container ">

<h1> <%= @shipment.customer %> </h1>

<br><br>

<% if session[:user_id] != @shipment.user.id %>
    <h2>Creator:</h2>
    <h3><%= link_to "#{@shipment.user.username}", user_path(@shipment.user)%></h3>
    <br><br>
<% end %>

<br><br>

<h2> Service: <%= @shipment.service.name %> - <%= @shipment.service.carrier.name %> </h2>

<br><br>

<h2> Shipment Details: </h2>

<% if session[:user_id] == @shipment.user.id %>
<ul>
    <li><b>Address:</b> <%= @shipment.address %></li>
    <br>
    <li><b>Contact:</b> <%= @shipment.contact %></li>
    <br>
    <li><b>Total Shipment Weight: </b> <%= @shipment.total_weight %>lbs</li>
    <br>
    <li><b>Ship Date: </b> <%= @shipment.ship_date.strftime("%m/%d/%Y")%></li>
    <br>
    <li><b>Tracking Number </b> <%= @shipment.tracking_number %></li>
    <br>
    <li><b>Status: </b> <%= @shipment.status %></li>
    <br>
    
</ul>
<% else %>
<ul>
    <li><b>Ship Date: </b> <%= @shipment.ship_date %></li>
    <br>
    <li><b>Status: </b> <%= @shipment.status %></li>
    <br>
</ul>
<% end %>

<br><br>

<b><%= link_to "Edit", edit_shipment_path(@shipment) if @shipment.user == current_user %></b>

</div>