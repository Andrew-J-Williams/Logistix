<h1> Create a Shipment </h1>


<%= form_for(@shipment) do |t| %>

    <% if params[:service_id] %>
        <h3>Service Type: <%= @service.name %> - <%= @service.carrier.name %></h3>
        <%= t.hidden_field :service_id %>
    <% else %>
        <%= t.label :service_id, "Select a Service Type" %>
        <%= t.collection_select :service_id, Service.sort_service, :id, :name, include_blank: true %>
    <% end %>


    <%= t.label :customer %>
    <%= t.text_field :customer %>
    <br><br>
    <%= t.label :address %>
    <%= t.text_field :address %>
    <br><br>
    <%= t.label :contact, "Phone"%>
    <%= t.text_field :contact %>
    <br><br>
    <%= t.label :total_weight %>
    <%= t.number_field :total_weight, min:1 %> lbs
    <br><br>
    <%= t.label :ship_date%>
    <%= t.text_field :ship_date %>
    <br><br>
    <%= t.label :tracking_number %>
    <%= t.text_field :tracking_number %>
    <br><br>
    <%= t.label :status %>
    <%= t.text_field :status %>
    <br><br>

    <%= t.submit "Create Shipment"%>

<% end %>
